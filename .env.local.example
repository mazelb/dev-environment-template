# Local Environment Variables
# Copy this file to .env.local and fill in your values
# IMPORTANT: Never commit .env.local to git (it's in .gitignore)

# =============================================================================
# AI/LLM API Keys
# =============================================================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk_ant_your_key_here

# OpenAI API Key (optional, for Copilot)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=sk_your_key_here

# =============================================================================
# GitHub
# =============================================================================

# GitHub Personal Access Token (optional)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_token_here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (if using postgresql optional tool)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass
POSTGRES_DB=project_db
DATABASE_URL=postgresql://devuser:devpass@postgres:5432/project_db

# =============================================================================
# Redis Configuration (if using)
# =============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# =============================================================================
# LangFuse Configuration (if using langfuse optional tool)
# =============================================================================

# LangFuse API Keys
# Get from: https://cloud.langfuse.com/ or your self-hosted instance
LANGFUSE_PUBLIC_KEY=pk-lf-your_public_key_here
LANGFUSE_SECRET_KEY=sk-lf-your_secret_key_here
LANGFUSE_HOST=http://localhost:3000

# =============================================================================
# Observability & Monitoring
# =============================================================================

# Datadog (if using datadog optional tool)
# Get from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your_datadog_api_key_here
DD_SITE=datadoghq.com
DD_SERVICE=my-service
DD_ENV=development

# Prometheus (if using prometheus optional tool)
PROMETHEUS_PORT=9090

# =============================================================================
# OpenSearch (if using opensearch optional tool)
# =============================================================================

OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_URL=http://opensearch:9200

# =============================================================================
# Apache Airflow (if using airflow optional tool)
# =============================================================================

AIRFLOW_HOME=/workspace/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://devuser:devpass@postgres/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here

# =============================================================================
# Application Configuration
# =============================================================================

# General
DEBUG=true
LOG_LEVEL=debug
ENVIRONMENT=development

# API Configuration (if using FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Node Environment
NODE_ENV=development
NODE_PORT=3000

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# AWS Configuration (if using LocalStack or AWS services)
# =============================================================================

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localstack:4566

# =============================================================================
# Frontend Configuration (if applicable)
# =============================================================================

# React/Vite
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=My Application

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Security & Authentication
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Session Secret
SESSION_SECRET=your_session_secret_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Email Configuration (if applicable)
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# Storage Configuration (if using S3/MinIO)
# =============================================================================

S3_ENDPOINT=http://minio:9001
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=my-bucket

# =============================================================================
# Third-Party Services
# =============================================================================

# Stripe (if using)
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# Twilio (if using)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (if using)
SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================================================
# Development Tools
# =============================================================================

# VS Code Remote Debugging
DEBUGPY_PORT=5678

# Jupyter (if using)
JUPYTER_PORT=8888
JUPYTER_TOKEN=

# =============================================================================
# Custom Project Variables
# =============================================================================

# Add your project-specific environment variables below
PROJECT_NAME=my-project
PROJECT_VERSION=1.0.0

# Example custom variables:
# CUSTOM_API_ENDPOINT=https://api.example.com
# CUSTOM_API_KEY=your_custom_api_key
# FEATURE_FLAG_ENABLED=true