        {
          "name": "Index Documents",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documents\": [\n    {\n      \"id\": \"doc-1\",\n      \"content\": \"Machine learning is a method of data analysis that automates analytical model building.\",\n      \"metadata\": {\n        \"source\": \"ml-intro.txt\",\n        \"category\": \"ai\",\n        \"year\": 2023\n      }\n    },\n    {\n      \"id\": \"doc-2\",\n      \"content\": \"Deep learning is a subset of machine learning that uses neural networks with multiple layers.\",\n      \"metadata\": {\n        \"source\": \"dl-basics.txt\",\n        \"category\": \"ai\",\n        \"year\": 2023\n      }\n    }\n  ],\n  \"text_field\": \"content\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/rag/index",
              "host": ["{{base_url}}"],
              "path": ["rag", "index"]
            },
            "description": "Index documents for retrieval"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Documents indexed successfully', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('indexed');",
                  "    pm.expect(jsonData.indexed).to.be.above(0);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
