      "item": [
        {
          "name": "Ask Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What is machine learning?\",\n  \"top_k\": 5,\n  \"search_type\": \"hybrid\",\n  \"temperature\": 0.7,\n  \"stream\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/rag/ask",
              "host": ["{{base_url}}"],
              "path": ["rag", "ask"]
            },
            "description": "Ask a question and get an AI-generated answer with retrieved context"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has answer field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('answer');",
                  "    pm.expect(jsonData).to.have.property('context');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
