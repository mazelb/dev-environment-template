{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Production-ready TypeScript frontend archetype with Next.js, GraphQL, and WebSocket support",
  "author": "Dev Environment Template",
  "type": "frontend",
  "framework": "next.js",
  "language": "typescript",
  "tags": [
    "frontend",
    "typescript",
    "nextjs",
    "react",
    "graphql",
    "websocket",
    "tailwindcss",
    "shadcn-ui"
  ],
  "dependencies": {
    "system": [
      "node>=20.0.0",
      "npm>=10.0.0"
    ],
    "services": []
  },
  "features": {
    "rest_api_client": true,
    "graphql_client": true,
    "websocket_support": true,
    "state_management": true,
    "authentication": true,
    "responsive_design": true,
    "dark_mode": true,
    "testing": true,
    "docker_support": true
  },
  "ports": {
    "dev": 3000,
    "prod": 3000
  },
  "environment_variables": {
    "required": [
      "NEXT_PUBLIC_API_URL",
      "NEXT_PUBLIC_GRAPHQL_URL",
      "NEXT_PUBLIC_WS_URL"
    ],
    "optional": [
      "NEXT_PUBLIC_APP_NAME",
      "NEXT_PUBLIC_APP_DESCRIPTION",
      "NEXT_PUBLIC_ENABLE_GRAPHQL",
      "NEXT_PUBLIC_ENABLE_WEBSOCKET",
      "NEXT_PUBLIC_ENABLE_AUTH"
    ]
  },
  "scripts": {
    "setup": "npm install",
    "dev": "npm run dev",
    "build": "npm run build",
    "start": "npm start",
    "test": "npm test",
    "lint": "npm run lint",
    "format": "npm run format"
  },
  "docker": {
    "build": {
      "context": ".",
      "dockerfile": "Dockerfile"
    },
    "run": {
      "ports": ["3000:3000"],
      "environment": [
        "NEXT_PUBLIC_API_URL=http://api:8000",
        "NEXT_PUBLIC_GRAPHQL_URL=http://api:8000/graphql",
        "NEXT_PUBLIC_WS_URL=ws://api:8000"
      ]
    }
  },
  "documentation": {
    "readme": "README.md",
    "setup_guide": "../docs/FRONTEND_GUIDE.md"
  }
}
