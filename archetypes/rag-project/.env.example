# Application Settings
APP_NAME=RAG API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# PostgreSQL Database
POSTGRES_DB=rag_db
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE_URL=postgresql+psycopg2://rag_user:rag_password@postgres:5432/rag_db

# Redis Cache
REDIS__HOST=redis
REDIS__PORT=6379
REDIS__DB=0
REDIS__PASSWORD=

# OpenSearch Configuration
OPENSEARCH_HOST=http://opensearch:9200
OPENSEARCH__HOST=http://opensearch:9200
OPENSEARCH__INDEX_NAME=documents
OPENSEARCH__CHUNK_INDEX_SUFFIX=chunks
OPENSEARCH__MAX_TEXT_SIZE=1000000

# Vector Search Settings
OPENSEARCH__VECTOR_DIMENSION=1024
OPENSEARCH__VECTOR_SPACE_TYPE=cosinesimil

# Hybrid Search Settings
OPENSEARCH__RRF_PIPELINE_NAME=hybrid-rrf-pipeline
OPENSEARCH__HYBRID_SEARCH_SIZE_MULTIPLIER=2

# Ollama LLM
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama2
OLLAMA_PORT=11434

# Embeddings
EMBEDDING_MODEL=nomic-embed-text

# Text Chunking Configuration
CHUNKING__CHUNK_SIZE=600
CHUNKING__OVERLAP_SIZE=100
CHUNKING__MIN_CHUNK_SIZE=100

# Document Processing
CHUNK_SIZE=600
CHUNK_OVERLAP=100
MAX_UPLOAD_SIZE=10485760

# PDF Parser Configuration
PDF_PARSER__MAX_PAGES=30
PDF_PARSER__MAX_FILE_SIZE_MB=20
PDF_PARSER__DO_OCR=false
PDF_PARSER__DO_TABLE_STRUCTURE=true

# RAG Settings
RETRIEVAL_K=5
TEMPERATURE=0.7
MAX_TOKENS=2048

# Langfuse Observability
LANGFUSE__HOST=http://langfuse:3000
LANGFUSE__PUBLIC_KEY=
LANGFUSE__SECRET_KEY=
LANGFUSE_NEXTAUTH_SECRET=changeThisToASecureRandomString32CharsMin
LANGFUSE_SALT=changeThisToAnotherSecureRandomString

# Apache Airflow Configuration
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin
AIRFLOW_FERNET_KEY=
AIRFLOW_WEBSERVER_SECRET_KEY=

# Optional: OpenAI API Key (if using OpenAI models)
# OPENAI_API_KEY=your-key-here

# Optional: Anthropic API Key
# ANTHROPIC_API_KEY=your-key-here
